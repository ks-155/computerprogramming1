#include <stdio.h>

int main() {
    int i;
    char gender;
    int boys = 0;
    int girls = 0;
    const int CLASS_SIZE = 50; // Define class size as a constant

    printf("Enter gender for each student (M for male, G for girl):\n");

    // Loop for each student in the class
    for (i = 1; i <= CLASS_SIZE; i++) {
        printf("Enter gender for student %d: ", i);
        // The space before %c is important to consume any newline characters
        scanf(" %c", &gender);

        if (gender == 'M' || gender == 'm') {
            boys++;
        } else if (gender == 'G' || gender == 'g') {
            girls++;
        } else {
            printf("Invalid input. Please enter 'M' or 'G'.\n");
            // Decrement i to re-ask for the same student
            i--;
        }
    }

    printf("\n--- Class Statistics ---\n");
    printf("Total number of boys: %d\n", boys);
    printf("Total number of girls: %d\n", girls);

    return 0;
}
