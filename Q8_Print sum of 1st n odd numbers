#include <stdio.h>

int main() {
    int n, i, sum = 0;

    // Ask the user to enter the limit
    printf("Enter how many odd numbers to sum: ");
    scanf("%d", &n);

    // Loop n times
    for (i = 1; i <= n; i++) {
        // Add the i-th odd number (2*i - 1) to sum
        sum = sum + (2 * i - 1);
    }

    printf("The sum of the first %d odd numbers is: %d\n", n, sum);
    return 0;
}
