#include <stdio.h>

int main() {
    int n, i, sum = 0;

    // Ask the user to enter the limit
    printf("Enter the value of n: ");
    scanf("%d", &n);

    // Loop from 1 to n
    for (i = 1; i <= n; i++) {
        // Add the current number 'i' to sum
        sum = sum + i;
    }

    printf("The sum of the first %d natural numbers is: %d\n", n, sum);
    return 0;
}
