#include <stdio.h>

int main() {
    int n, i;

    // Ask the user to enter the limit
    printf("Enter how many even numbers to print: ");
    scanf("%d", &n);

    printf("The first %d even numbers are:\n", n);

    // Loop n times
    for (i = 1; i <= n; i++) {
        // Print the i-th even number
        printf("%d ", 2 * i);
    }
    printf("\n");
    return 0;
}
