#include <stdio.h>

int main() {
    // Declare variables for rupees and dollars
    float rupees, dollars;

    // Define the conversion rate
    const int CONVERSION_RATE = 48;

    // Prompt the user for input
    printf("Enter the amount in Rupees (Rs.): ");

    // Read the user input
    scanf("%f", &rupees);

    /* Perform the conversion (note the division)*/
    dollars = rupees / CONVERSION_RATE;

    // Display the result
    printf("Rs. %.2f is equal to $%.2f.\n", rupees, dollars);

    return 0;
}
